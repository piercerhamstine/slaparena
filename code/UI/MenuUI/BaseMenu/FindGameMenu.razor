@using Sandbox;
@using Sandbox.UI;
@inherits Panel;

@attribute [StyleSheet]

<root>
    <div class="header">
        Slap Arena Servers
    </div>

    <section>
        <ServerListPanel @ref="ServerList" ShowGame=@false FilterByGame=@Game.Menu.Package.FullIdent></ServerListPanel>
    </section>

    <section class="buttons">
        <button class="button" onclick="@(() => ServerList.Refresh())"> Refresh </button>
        <a class="button" href="/">Back</a>
    </section>
</root>

@code{
    ServerListPanel ServerList;
}