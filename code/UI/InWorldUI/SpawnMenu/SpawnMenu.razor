@using Sandbox;
@using Sandbox.UI;
@inherits PanelWorld;

@namespace SlapArena.UI

@attribute [StyleSheet]

<root>
    @if(Entity is not Pawn plyr || !plyr.IsValid()){
    return;
}
    <section class="header">
        <span>Welcome to Slap Arena</span>
    </section>

    <section class="about">
        <div>This is a WORK IN PROGRESS.</div>
    </section>

    <section class="instructions">
        <p>The goal is to knock other players off the map.</p>
        <p>Currently there is only one glove, the basic glove to use.</p>
        <p>You can dash by pressing the "run" key, most likely shift.</p>
    </section>
</root>

@code{
    public SpawnMenu(Vector3 pos, Rotation rot) : base(pos, rot){
        this.PanelBounds = new Rect(new Vector2(this.PanelBounds.Position.x, this.PanelBounds.Position.y), new Vector2(2000, 2000));
        AddChild(new GloveGrid());
    }
}